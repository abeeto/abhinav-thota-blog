---
layout: base.njk
---

{# Hero section - uses data from front matter #}
<main id="#main">
  <section class="section" data-padding="compact">
    <div class="wrapper flow hero" data-flow-margin="compact">
      <h1>{{ hero.title }}</h1>
      <p>{{ hero.description }}</p>
    </div>
  </section>
</main>

{# Features/Highlights section #}
{% if projects %}
<section class="section">
  <div class="wrapper flow">
    <div class="card-content-head">
      <h2>{{ projects.title }}</h2>
      <a href="">(see all projects)</a>
    </div>
    {% for item in projects.items %}
    <div class="dynamic-content-card">
        <div class="dynamic-content-card-text flow" data-flow-margin="compact">
          <h3>{{ item.name }}</h3>
          <p>{{ item.description }}</p>
        </div>
        <div class="gif-wrapper">
          <div class="gif-placeholder" data-gif-loaded="false"></div>
          <img src="{{ item.lazyLoadImg }}" alt="{{ item.name }} preview" data-gif-loaded="false">
        </div>
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}

{# Additional markdown content from the .md file #}
{% if content %}
<section class="additional-content">
  {{ content | safe }}
</section>
{% endif %}
