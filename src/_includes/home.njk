---
layout: base.njk
---

{# Hero section - uses data from front matter #}
<main id="#main">
  <section class="section" data-padding="compact">
    <div class="wrapper flow hero" data-flow-margin="compact">
      <h1>{{ hero.title }}</h1>
      <p>{{ hero.description }}</p>
    </div>
  </section>
</main>

{# Features/Highlights section #}
{% if features %}
<section class="section">
  <div class="wrapper flow">
    <div class="card-content-head">
      <h2>{{ features.title }}</h2>
      <a href="">(see all projects)</a>
    </div>
    {% for feature in features.items %}
    <div class="dynamic-content-card">
        <div class="dynamic-content-card-text flow" data-flow-margin="compact">
          <h3>{{ feature.name }}</h3>
          <p>{{ feature.description }}</p>
        </div>
        {# Just use GIF or image directly - no JS needed! #}
        <img src="{{ feature.image }}" alt="{{ feature.name }} preview">
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}

{# Recent posts section #}
{% if showRecentPosts %}
<section class="section">
  <div class="wrapper flow">
    <div class="card-content-head">
      <h2>Recent Posts</h2>
      <a href="">(see all posts)</a>
    </div>
    <ul>
    {% for post in collections.posts | reverse %}
      {% if loop.index <= 3 %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
      {% endif %}
    {% endfor %}
    </ul>
  </div>
</section>
{% endif %}

{# Additional markdown content from the .md file #}
{% if content %}
<section class="additional-content">
  {{ content | safe }}
</section>
{% endif %}
