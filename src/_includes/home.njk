---
layout: base.njk
---

{# Hero section - uses data from front matter #}
<main id="#main">
  <section class="section" data-padding="compact">
    <div class="wrapper flow hero" data-flow-margin="compact">
      <h1>{{ hero.title }}</h1>
      <p>{{ hero.description }} <span id="typing-text" data-hobbies='{{ hero.passions.items | dump | safe }}'></span><span class="cursor">|</span></p>
    </div>
  </section>
</main>
{% if countries %}
<section class="section" data-padding="wide">
  <div class="country-cards-section">
    <div class="country-cards-wrapper">
      {% for country in countries.items %}
      <div class="country-card wrapper flow" data-width="wide">
        <img src="{{ country.image }}" alt="map" loading="lazy">
        {% for place in country.places %}
        <span class="country-card-text" data-country-name="{{ place.name }}">{{ place.name }}</span>
        {% endfor %}
        <span class="country-card-context">{{ country.context }}</span>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
{# Features/Highlights section #}
{% if projects %}
<section class="section">
  <div class="wrapper flow">
    <div class="card-content-head">
      <h2>{{ projects.title }}</h2>
      <a href="">(see all projects)</a>
    </div>
    {% for item in projects.items %}
    <div class="dynamic-content-card">
        <div class="dynamic-content-card-text flow" data-flow-margin="compact">
          <h3>{{ item.name }}</h3>
          <p>{{ item.description }}</p>
        </div>
        <div class="gif-wrapper">
          <div class="gif-placeholder" data-gif-loaded="false"></div>
          <img src="{{ item.lazyLoadImg }}" alt="{{ item.name }} preview" data-gif-loaded="false">
        </div>
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}

{# Additional markdown content from the .md file #}
{% if content %}
<section class="additional-content">
  {{ content | safe }}
</section>
{% endif %}
