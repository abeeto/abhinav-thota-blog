---
layout: base.njk
---

{# Hero section - uses data from front matter #}
<main id="#main">
  <section class="section" data-padding="compact">
    <div class="wrapper flow hero" data-flow-margin="compact">
      <h1>{{ hero.title }}</h1>
      <p>{{ hero.description }}</p>
    </div>
  </section>
</main>

{# Features/Highlights section #}
{% if features %}
<section class="section features">
  <div class="flow">
    <h2>{{ features.title }}</h2>
    {% for feature in features.items %}
    <div class="project-tile">
        <div class="project-tile-content flow">
          <h3>{{ feature.name }}</h3>
          <p>{{ feature.description }}</p>
        </div>
        <img src="#" alt="">
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}

{# Recent posts section #}
{% if showRecentPosts %}
<section class="recent-posts">
  <h2>Recent Posts</h2>
  <ul>
  {% for post in collections.posts | reverse %}
    {% if loop.index <= 3 %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </li>
    {% endif %}
  {% endfor %}
  </ul>
</section>
{% endif %}

{# Additional markdown content from the .md file #}
{% if content %}
<section class="additional-content">
  {{ content | safe }}
</section>
{% endif %}
